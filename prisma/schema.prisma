datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String  @id @default(cuid())
  userId       String  @unique
  name         String
  imageUrl     String
  email        String
  hasSeenIntro Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
